<odoo>
	<data>

		<record model="ir.ui.view" id="download_daily_report_memory_form">
			<field name="name">download.daily.report.memory.form</field>
			<field name="model">daily.report.memory</field>
			<field name="arch" type="xml">
				<form>
					<group>
						<field name="type"/>
					</group>
					<footer>
						<button string="Proceed" type="object" name="print_daily_report" class="oe_highlight"/>
						<button string="Cancel" class="oe_link" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="upload_daily_report_memory_form">
			<field name="name">upload.daily.report.memory.form</field>
			<field name="model">daily.report.memory</field>
			<field name="arch" type="xml">
				<form>
					<group>
						<field name="daily_report" required="True"/>
					</group>
					<footer>
						<button string="Proceed" type="object" name="upload_daily_report" class="oe_highlight"/>
						<button string="Cancel" class="oe_link" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

	</data>
</odoo>
